﻿@using BagheerasDream.Web.ViewModels.Litter
@using BagheerasDream.Data.Models.Enums

@model LitterInputModel

@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <p class="text-danger">@error.ErrorMessage</p>
    }
}

<div class="row">
    <div class="col-md-12">
        <h1 style="text-align: center; color: lightgray">Добави ново котило</h1>
        <form class="mx-auto half-width col-5" enctype="multipart/form-data" method="post" asp-area="Administration" asp-controller="Administration" asp-action="AddLitter">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Name" class="suls-text-color">Име</label>
                <input asp-for="Name" class="form-control" placeholder="A, B, F...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Colours" class="suls-text-color">Цветове на котетата</label>
                <input asp-for="Colours" class="form-control" placeholder="Цветове...">
                <span asp-validation-for="Colours" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthday" class="suls-text-color">Дата на раждане</label>
                <input asp-for="Birthday" type="date" class="form-control" placeholder="Дата на раждане...">
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MotherName" class="suls-text-color">Име на майка</label>
                <input asp-for="MotherName" class="form-control" placeholder="Име на майка...">
                <span asp-validation-for="MotherName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FatherName" class="suls-text-color">Име на баща</label>
                <input asp-for="FatherName" class="form-control" placeholder="Име на баща...">
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BloodGroup" class="suls-text-color">Кръвна група</label>
                <input asp-for="BloodGroup" class="form-control" placeholder="Кръвна група...">
                <span asp-validation-for="BloodGroup" class="text-danger"></span>
            </div>

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Добави!</button>
        </form>
    </div>
</div>