﻿@using BagheerasDream.Web.ViewModels.Administration
@using BagheerasDream.Data.Models.Enums

@model CatInputModel

@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <p class="text-danger">@error.ErrorMessage</p>
    }
}


<div class="row">
    <div class="col-md-12">
        <h1 style="text-align: center; color: lightgray">Добави нова котка</h1>
        <form class="mx-auto half-width col-5" enctype="multipart/form-data" method="post" asp-area="Administration" asp-controller="Administration" asp-action="AddCat">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Name" class="suls-text-color">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Име...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="suls-text-color">Титла</label>
                <input asp-for="Title" class="form-control" placeholder="Титла...">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthday" class="suls-text-color">Дата на раждане</label>
                <input asp-for="Birthday" type="date" class="form-control" placeholder="Birthday...">
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="suls-text-color">Пол</label>
                <select asp-for="Gender" class="form-control">
                    <option value="@Gender.Male">
                        Male
                    </option>
                    <option value="@Gender.Female">
                        Female
                    </option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="suls-text-color">Порода</label>
                <select asp-for="Breed" class="form-control">
                    <option value="@Breed.British_Shorthair">
                        British Shorthair
                    </option>
                </select>
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="suls-text-color">Цвят</label>
                <select asp-for="Colour" class="form-control">
                    @foreach(Colour colour in (Colour[]) Enum.GetValues(typeof(Colour)))
                    {
                        <option value="@colour">
                            @colour.ToString()
                        </option>
                    }
                </select>
                <span asp-validation-for="Colour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="File" class="suls-text-color">Снимка на котката</label>
                <input asp-for="File" class="form-control">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Добави котка!</button>
        </form>
    </div>
</div>