            @if (Model.Father != null && Model.Mother != null)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="parent card">
                            <div class="card-image">
                                <img class="img-fluid" src="~/catImages/@Model.Mother.ProfileImage" alt="#">
                            </div>
                            <div class="parent-info">
                                <h3 class="card-title">@Model.Mother.Name</h3>
                            </div>
                            <div class="button-container">
                                <a class="btn-solid-reg page-scroll" href="/Cats/Cat?catId=@Model.Mother.CatId">SEE MORE</a>
                            </div> <!-- end of button-container -->
                        </div>

                        <div class="parent card">
                            <div class="card-image">
                                <img class="img-fluid" src="~/catImages/@Model.Father.ProfileImage" alt="#">
                            </div>
                            <div class="parent-info">
                                <h3 class="card-title">@Model.Father.Name</h3>
                            </div>
                            <div class="button-container">
                                <a class="btn-solid-reg page-scroll" href="/Cats/Cat?catId=@Model.Father.CatId">SEE MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <p></p>
    </div>
</div>
